VPATH=%VPATH%

RUSTC ?= rustc
RUSTFLAGS ?=
EXT_DEPS ?=
RUSTDOC ?= rustdoc
RUSTDOC_FLAGS ?=
RUSTDOC_TARGET ?= doc

ifeq ($(shell uname -s),Darwin)
ifeq ($(shell sw_vers | grep -c 10.6),1)
RUSTFLAGS += --cfg mac_10_6
endif
ifeq ($(shell sw_vers | grep -c 10.7),1)
RUSTFLAGS += --cfg mac_10_7
endif
else
endif

RUST_SRC=$(shell find $(VPATH)/. -type f -name '*.rs')

.PHONY: all
all:    libopengles.dummy

libopengles.dummy: lib.rs $(RUST_SRC) $(EXT_DEPS)
	$(RUSTC) $(RUSTFLAGS) $< --out-dir .
	touch $@

opengles-test: lib.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

.PHONY: doc
doc: $(RUSTDOC_TARGET)/opengles/index.html

$(RUSTDOC_TARGET)/opengles/index.html: lib.rs $(RUST_SRC) $(EXT_DEPS)
	$(RUSTDOC) $(RUSTDOC_FLAGS) $< -o $(RUSTDOC_TARGET)

.PHONY: check
check: opengles-test
	./opengles-test $(TEST)

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.rlib *.dll *.dummy *-test
